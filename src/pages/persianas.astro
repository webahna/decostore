import Layout from "../layouts/Layout.astro";
import { Header } from "../components/Header";
import { InfoPersianas } from "../components/pages/InfoPersianas";
import { Footer } from "../components/Footer";
import { GaleryCarrusel } from "../components/GaleryCarrusel";
const imagesURL = [
  "/image-default.webp",
  "/image-default.webp",
  "/image-default.webp",
  "/image-default.webp",
  "/image-default.webp",
  "/image-default.webp",
