>
  <Header client:only="react" />
  <InfoCespedDeportivo client:only="react" classes="px-5 pt-5" />
  <GaleryCarrusel
    client:only="react"
    classes="pt-10 4sm:pt-20 md:pt-32"
    imagesURL={imagesURL}
  />
  <Footer
    client:only="react"
    href={URL}
    classes={"px-5 py-10 4sm:py-20 md:py-32"}
  />
</Layout>
