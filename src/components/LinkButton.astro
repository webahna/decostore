---
interface Props {
  text?: string;
  bgColor?: string;
  textColor?: string;
  href: string;
}

const {
  text = "Ingresa un texto",
  bgColor = "#B33636",
  textColor = "#FFFFFF",
  href,
} = Astro.props;
---

<a
  href={href}
  class=`bg-[${bgColor}] text-[${textColor}] px-6 pt-2 pb-3 md:px-9 rounded-full text-base md:text-2xl font-semibold`
  >{text}</a
>
